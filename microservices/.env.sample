GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcp.json
GCP_CREDENTIALS_PATH=/path/to/gcp.json
GCP_PROJECT_ID=envid-development
ENVID_METADATA_GCS_BUCKET=
ENVID_METADATA_DB_HOST=db
ENVID_METADATA_DB_PORT=27017
ENVID_METADATA_DB_NAME=envid_metadata
ENVID_METADATA_DB_USER=
ENVID_METADATA_DB_PASSWORD=
ENVID_FFMPEG_SERVICE_URL=http://transcoder:5091
ENVID_TEXT_NORMALIZER_URL=
ENVID_TRANSCRIPT_TEXT_NORMALIZER_NLP_MODE=gemini
ENVID_TRANSCRIBE_SERVICE_URL=http://audio-transcription:5088
ENVID_SUMMARIZER_SERVICE_URL=

ENVID_WHISPER_AUDIO_ATEMPO=0.9
ENVID_WHISPER_AUDIO_FILTER=default
ENVID_TRANSCRIBE_BACKEND=openai-whisper
ENVID_OPENAI_WHISPER_MODEL=large-v3
ENVID_OPENAI_WHISPER_DEVICE=cuda
ENVID_OPENAI_WHISPER_COMPUTE_TYPE=float16
ENVID_TEXT_NORMALIZE_ENABLED=true
ENVID_TEXT_NORMALIZE_MODEL=meta-llama/Meta-Llama-3.1-8B-Instruct
ENVID_TEXT_NORMALIZE_SEGMENTS=true
ENVID_LANGUAGETOOL_URL=http://translate:8010
ENVID_LLM_PROVIDER=local

# OpenRouter (transcript normalization + summarization)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_TRANSCRIPT_MODEL=meta-llama/llama-3.3-70b-instruct:free
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct:free
OPENROUTER_TIMEOUT_SECONDS=120
ENVID_LIBRETRANSLATE_TIMEOUT_SECONDS=120

# Google Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-pro

# GCP Video Intelligence object tracking
ENVID_METADATA_GCP_VI_ENABLE_OBJECT_TRACKING=true
ENVID_METADATA_GCP_VI_MIN_OBJECT_CONFIDENCE=0.95
ENVID_METADATA_GCP_VI_MIN_LABEL_CONFIDENCE=0.95

# Moderation full-video sampling
ENVID_METADATA_MODERATION_SCENE_SAMPLING=false
ENVID_METADATA_MODERATION_INTERVAL_SECONDS=1
ENVID_METADATA_MODERATION_MAX_FRAMES=20000

# OCR (text-on-video) workload
ENVID_METADATA_OCR_INTERVAL_SECONDS=3
ENVID_METADATA_OCR_MAX_FRAMES=2000

# Scene fallback + scene-by-scene LLM
ENVID_SCENE_FALLBACK_ENABLED=true
ENVID_SCENE_FALLBACK_MIN_SECONDS=8
ENVID_SCENE_FALLBACK_TARGET=6
ENVID_SCENE_BY_SCENE_LLM=true
ENVID_SCENE_FORCE_UNIFORM=true

# Local LLM (no API key by default)
ENVID_LLM_BASE_URL=http://localhost:8000/v1
ENVID_LLM_API_KEY=
ENVID_LLM_MODEL=
ENVID_LLM_TRANSCRIPT_MODEL=

# Hugging Face token (optional)
HF_TOKEN=