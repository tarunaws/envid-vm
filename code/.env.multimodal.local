# Local overrides for envidMetadataGCP (multimodal)
# GCP project and region
GCP_PROJECT_ID=envid-development
GCP_LOCATION=asia-south1
GOOGLE_APPLICATION_CREDENTIALS=/Users/tarun-envid/mydrive/gcpAccess/gcp.json
ENVID_METADATA_GCS_ENFORCE_PREFIX=false

# GCP bucket used for raw videos/artifacts
GCP_GCS_BUCKET=envid-metadata-tarun
# Optional explicit override (used by app.py fallback resolution)
ENVID_METADATA_GCS_BUCKET=envid-metadata-tarun

# Deployment metadata (not used by runtime, but kept for ops/scripts)
ENVID_METADATA_VM_NAME=metadata-dev
ENVID_METADATA_REPO=envid-metadata

# Enforce label detection via GCP Video Intelligence (disable local label sidecar autostart)
ENVID_LOCAL_LABEL_DETECTION_AUTOSTART=0

# Run key scene/high point before Whisper (sequential)
ENVID_METADATA_SEQUENTIAL_SCENE_BEFORE_WHISPER=1

# Run all tasks sequentially (no parallel tasks)
ENVID_METADATA_RUN_ALL_SEQUENTIAL=1

# OPENROUTER API KEY
OPENROUTER_API_KEY=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
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct:free
OPENROUTER_SCENE_MODEL=meta-llama/llama-3.3-70b-instruct:free
ENVID_SCENE_BY_SCENE_LLM=1

# Whisper audio preprocessing (mandatory)
ENVID_WHISPER_AUDIO_PREPROCESS=1
ENVID_WHISPER_AUDIO_FILTERS=highpass=f=80,lowpass=f=8000,anlmdn,afftdn,loudnorm=I=-16:LRA=11:TP=-1.5
ENVID_WHISPER_AUDIO_ATEMPO=0.9

# Whisper chunking to show progress
ENVID_WHISPER_CHUNKING=1
ENVID_WHISPER_CHUNK_SECONDS=60
ENVID_WHISPER_CHUNK_OVERLAP_SECONDS=3
ENVID_WHISPER_MIN_DURATION_TO_CHUNK_SECONDS=60

# Dictionary correction (language-aware)
ENVID_DICTIONARY_ENABLE=1
ENVID_DICTIONARY_LANGS=hi,bn,ta,te,ml,mr,gu,kn,pa,ur,ne,si,th,id,ms,vi,zh,ja,ko,ar

# LibreTranslate (local deployment) for translation
ENVID_METADATA_TRANSLATE_PROVIDER=libretranslate
ENVID_LIBRETRANSLATE_URL=http://localhost:5000
